<%= form_for(:recipe, url: recipes_path) do |f| %>

  <%= render partial: 'form' %>
  <%= text_area 'recipe', 'body', hidden: true %>

  <%= submit_tag 'Create recipe' %>
<% end %>

<script>
  $("form").submit(function() {
    var editor = ace.edit("editor");	
	$("#recipe_body").val(editor.getSession().getValue());
  });
</script>

<% content_for(:breadcrumb) do %>
  <% breadcrumb_box do %>
    <%= link_to 'Manage recipes', recipes_path, :style => "float:right", :class => "arrow_link" %>
    <%= link_to 'Recipes', recipes_path %> &gt; 
    New
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = 'New recipe' %>
  <h2>New recipe</h2>
<% end %>
