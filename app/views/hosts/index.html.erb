<fieldset class="fieldset">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6"><%= "#{pluralize(Host.count, 'Host')} listed" %></div>
                <div class="col-md-6"></div>
            </div>
        </div>

        <table class="table">
            <tbhead>
                <tr>
                    <th>Name</th>
                    <th>#Stages</th>
                    <th>#Roles</th>
                </tr>
            </tbhead>
            <tbody>
            <% for host in @hosts %>
                <tr>
                    <td><%= host.name %></td>
                    <td><%= host.stages.count %></td>
                    <td><%= host.roles.count %></td>
                    <% if current_user.admin? %>
                        <td align="right">
                            <%= view_button_for_ajax host_path(host) %>
                            <%= edit_button_for_ajax edit_host_path(host) %>
                            <%= delete_button_for_ajax host_path(host), host.name %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>

    <div class="form-horizontal col-md-offset-3">
        <div class="col-md-6 form-group">
            <label class="col-sm-2 control-label">Search</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="search">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <ul class="pagination">
            <li><%= link_to 'Â«', '' %></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>
    </div>
</fieldset>

<% content_for(:breadcrumb) do %>
    <% breadcrumb_box do %>
        <%= link_to "Hosts", hosts_path %>
    <% end %>
<% end %>

<% content_for(:page_title) do %>
    <%= page_title_helper(I18n.t('hosts.title'), new_button_for_ajax(new_host_path)) %>
<% end %>
