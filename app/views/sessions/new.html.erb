<%= stylesheet_link_tag 'application' %>
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <% unless flash[:notice].blank? %>
            <%= nice_flash(flash[:notice]) %>
        <% end %>
        <% unless flash[:error].blank? %>
            <%= error_flash(flash[:error]) %>
        <% end %>
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
            </div>
            <div style="padding-top:30px" class="panel-body" >
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <%= form_tag action: :create do %>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <%= text_field_tag :login, '', class: 'form-control', placeholder: 'kerberos id' %>
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <%= password_field_tag :password, '',  class: 'form-control', placeholder: 'kerberos password' %>
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <%= check_box_tag :remember_me, '1', true, class: 'noframe' %>
                                <%= label_tag :remember_me %>
                            </label>
                        </div>
                    </div>
                    <%= submit_tag 'Log in', class: 'btn btn-success' %>
                <% end %>
            </div>
        </div>
    </div>
</div>

