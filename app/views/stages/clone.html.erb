<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><%= I18n.t 'helpers.titles.clone', model: (I18n.t 'helpers.stage') %></h4>
        </div>

        <%= form_for(:stage, url: clone_project_stage_path(@project, @stage)) do |f| %>
            <div class="modal-body">
                <b>Name</b> (e.g. 'Prod', 'Test', 'Dev')<br>
                <%= text_field 'stage', :name %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><%= I18n.t 'helpers.close'%></button>
                <%= submit_tag (I18n.t 'helpers.clone'), class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</div>

