<%= stylesheet_link_tag 'application' %>
<div class="container">
    <div style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <% unless flash[:notice].blank? %>
            <%= nice_flash(flash[:notice]) %>
        <% end %>
        <% unless flash[:error].blank? %>
            <%= error_flash(flash[:error]) %>
        <% end %>
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title">Forgot your password?</div>
            </div>
            <div style="padding-top:30px" class="panel-body" >
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post ) do |f| %>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <%= f.text_field :login, class: 'form-control', placeholder: 'login name', autofocus: true %>
                    </div>
                    <%= submit_tag 'Send me reset password instructions', class: 'btn btn-success' %>
                <% end %>
            </div>
        </div>
    </div>
</div>
