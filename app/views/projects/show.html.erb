<table class="table">
    <tr>
        <td style="width: 10%;border: none"><b>Description</b></td>
        <td style="border: none"><%= @project.description %></td>
    </tr>
    <tr>
        <td style="width: 10%"><b>Project Type</b></td>
        <td><%= @project.template %></td>
    </tr>
    <tr>
        <td style="width: 10%"><b>#Deployments</b></td>
        <td><%=h @project.deployments.count %></td>
    </tr>
    <tr>
        <td></td>
        <td></td>
    </tr>
</table>

<br>
<legend>
    <div class="row">
        <div class="col-md-6"><strong><%= I18n.t 'projects.configuation' %></strong></div>
        <div class="col-md-6" align="right"><%= new_button_for_ajax new_project_project_configuration_path(current_project) %></div>
    </div>
</legend>
<%= render(:partial => 'configs')%>

<br>
<legend>
    <div class="row">
        <div class="col-md-6"><strong><%= I18n.t 'helpers.stage' %></strong></div>
        <div class="col-md-6" align="right"><%= new_button_for_ajax new_project_stage_path(current_project) %></div>
    </div>
</legend>
<%= render(:partial => 'stages')%>

<br><br><br>
<legend><strong>Recent Deployments</strong></legend>
<%= render(:partial => 'deployments')%>

<% content_for(:breadcrumb) do %>
    <% breadcrumb_box do %>
        <%= link_to 'Manage projects', projects_path, style: 'float:right' %>
        <%= link_to 'Projects', projects_path %> &gt;
        Project <%= link_to current_project.name, project_path(current_project) %>
    <% end %>
<% end %>

<% content_for(:page_title) do %>
    <div class="row">
        <div class="col-md-6"><span class="label label-primary"><%= current_project.name %></span></div>
        <div class="col-md-6" align="right">
            <%= edit_button_for_ajax edit_project_path(current_project) %>
            <%= clone_button_for_ajax clone_form_path(current_project) %>
            <%= delete_button_for_ajax project_path, @project.name %>
        </div>
    </div>
<% end %>

